<!doctype html>
<html>
<head>
  <meta content="IE=edge" http-equiv="X-UA-Compatible">
  <meta charset="utf-8">
  <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

  <!-- Use title if it's in the page YAML frontmatter -->
  <title><%= current_page.data.title || "Middleman" %></title>

  <link href='//fonts.googleapis.com/css?family=Lato:300,400' rel='stylesheet' type='text/css'>

  <!-- Include Foundation css-->
  <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/foundation/6.2.1/foundation.min.css' %>

  <!-- Include site specific css -->
  <%= stylesheet_link_tag :site %>

</head>

<body class="<%= page_classes %>">
<%= partial 'partials/header' %>
<%= yield %>
<%= partial 'partials/footer' %>
<%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js' %>
<%= javascript_include_tag 'https://cdn.jsdelivr.net/foundation/6.2.1/foundation.min.js' %>
<%= javascript_include_tag :all %>
</body>
</html>
